# AI Mayhem Environment Configuration
# Copy this file to .env and fill in your API keys

# =============================================================================
# BUDGET SETTINGS
# =============================================================================
BUDGET_DAILY=10.0
BUDGET_WARNING_THRESHOLD=0.8

# =============================================================================
# WALLET RECON SOURCE SELECTION
# =============================================================================
# Primary source for wallet activity (alchemy|covalent|bitquery|mock)
# Alchemy is recommended for Base chain (fastest, smallest responses)
WALLET_RECON_SOURCE=alchemy

# =============================================================================
# API KEYS
# =============================================================================

# Alchemy API (Primary - Base chain optimized)
# Get your API key from: https://dashboard.alchemy.com/
ALCHEMY_API_KEY=your_alchemy_api_key_here

# Covalent API (Secondary - Multi-chain support)
# Get your API key from: https://www.covalenthq.com/
COVALENT_API_KEY=your_covalent_api_key_here

# Bitquery API (Fallback - GraphQL flexibility)
# Get your API key from: https://streaming.bitquery.io/
BITQUERY_ACCESS_TOKEN=your_bitquery_access_token_here

# =============================================================================
# LLM SETTINGS
# =============================================================================

# LiteLLM settings (if using local proxy)
LITELLM_URL=http://localhost:8000
OPENAI_API_KEY=your_openai_key_here
OPENAI_BASE_URL=http://localhost:8000

# =============================================================================
# OPTIONAL API KEYS
# =============================================================================

# Nansen API (for real data)
NANSEN_API_KEY=your_nansen_key_here

# =============================================================================
# DEBUG SETTINGS
# =============================================================================

# Enable verbose logging for debugging
BITQUERY_VERBOSE=0
DEBUG_MODE=0
